<form action="/posts/#{@post.id}" method="patch">
  <label for="post[name]">Name: </label>
  <input type="text" name="post[name]" id="name" value="#{@post.name}"><br>
  <label for="post[content]">Content: </label><br>
  <input type="textarea" name="post[content]" id="content" value="#{@post.content}"><br>
  <input type="submit" id="submit">
</form>
